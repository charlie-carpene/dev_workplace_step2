<p id="notice"><%= notice %></p>

<h1>French Foreigners</h1>

<table>
  <thead>
    <tr>
      <th>Country</th>
      <th>Year</th>
      <th>Nbr french</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @french_foreigners.each do |french_foreigner| %>
      <tr>
        <td><%= french_foreigner.country %></td>
        <td><%= french_foreigner.year %></td>
        <td><%= french_foreigner.nbr_french %></td>
        <td><%= link_to 'Show', french_foreigner %></td>
        <td><%= link_to 'Edit', edit_french_foreigner_path(french_foreigner) %></td>
        <td><%= link_to 'Destroy', french_foreigner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="d-flex justify-content-around">
  <%= link_to 'New French Foreigner', new_french_foreigner_path, class: "btn btn-outline-primary m-2 py-2 px-4" %>
  <%= link_to "Retour", root_path, class: "btn btn-outline-warning m-2 py-2 px-4" %>
</div>

